{
  "$schema": "https://json-schema.zeabur.app/schema.json",
  "build": {
    "type": "nextjs",
    "buildCommand": "npm run build",
    "installCommand": "npm install",
    "outputDirectory": ".next"
  },
  "runtime": {
    "framework": "nextjs",
    "startCommand": "npm start"
  },
  "deploy": {
    "region": "hkg",
    "healthCheck": {
      "path": "/",
      "timeout": 30,
      "interval": 10
    }
  },
  "env": {
    "NODE_ENV": "production",
    "NEXT_TELEMETRY_DISABLED": "1"
  },
  "resources": {
    "limits": {
      "memory": "1024Mi",
      "cpu": "1000m"
    }
  }
}
